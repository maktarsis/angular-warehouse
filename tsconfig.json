{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "paths": {
      "!app/*": [
        "app/*"
      ],
      "!env/*": [
        "environments/*"
      ],
      "#shared/*": [
        "app/shared/*"
      ],
      "$auth/*": [
        "app/core/views/modules/auth/*"
      ],
      "$core/*": [
        "app/core/*"
      ],
      "+material/*": [
        "app/shared/material/*"
      ],
      "+apollo/*": [
        "app/core/apollo/*"
      ],
      "+store/*": [
        "app/core/store/*"
      ],
      "-cart/*": [
        "app/views/cart/*"
      ],
      "-home/*": [
        "app/views/home/*"
      ],
      "-shop/*": [
        "app/views/shop/*"
      ],
      "-location/*": [
        "app/views/location/*"
      ],
      "-user-center/*": [
        "app/views/user-center/*"
      ]
    }
  }
}

// from core $
// shared #
// external  +
// lazy -
// cli boilerplate - !

// @ and no-symbols paths are reserved for libraries from npm like @angular, @ngrx etc.